<h4>Create user posts here</h4>

<div class="row">

    <div class="card newPost-card  mb-3" style="max-width: 40rem;">
        <section class="col">

            <h2 class="newPost-text">New Post</h2>

            <form class="form newPost-form">
                <div class="input-group  mb-3">
                    <label class="input-group-text" for="post-title">Title</label>
                    <input  class="form-control"  type="text" id="post-title" />
                </div>

                <div class="input-group  mb-3">
                    <label  class="input-group-text" for="post-content">Content</label>
                    <input  class="form-control"   type="text" id="post-content" />
                </div>
    
                <div class="form-group postBtn">
                    <button class="btn btn-primary" type="submit">Create</button>
                </div>
            </form>

        </section>


    </div>

</div>